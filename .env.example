# OpenAI API Key (required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Serper API Key for web search (currently not used by the newsletter)
SERPER_API_KEY=your_serper_api_key_here

# Email Configuration (Resend)
# Use your verified domain: @thepaymentsnerd.co
EMAIL_FROM=newsletter@thepaymentsnerd.co

# Resend API Key
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Subscription Security
SUBSCRIBE_TOKEN_SECRET=your_random_secret_key_here

# Cron Job Security
CRON_SECRET=your_cron_secret_here

# Site URL (for unsubscribe links)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
